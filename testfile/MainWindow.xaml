<Window x:Class="testfile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testfile"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBox x:Name="fileContentTextBox" Height="150" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Button x:Name="openButton" Content="파일 읽기(병렬)" Width="120" Margin="0,0,10,0" Click="OpenButton_Click"/>
            <Button x:Name="saveButton" Content="파일 쓰기(병렬)" Width="120" Click="SaveButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
